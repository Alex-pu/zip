<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="styles.css"> <!-- Link to your CSS file for styling -->
</head>
<style>/* styles.css */
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0; /* Background color for the body */
    }
    
    h1, h2 {
        color: #333; /* Text color for headings */
    }
    
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        background-color: #fff; /* White background for the table */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Box shadow for the table (card-like effect) */
    }
    
    table th {
        background-color: #4CAF50; /* Green background for table header */
        color: white; /* White text color for table header */
        padding: 12px 15px;
        text-align: left;
    }
    
    table td {
        padding: 8px 15px;
        border-bottom: 1px solid #ddd; /* Border color between table rows */
    }
    
    table tr:hover {
        background-color: #f2f2f2; /* Background color on hover */
    }
    
    table a {
        text-decoration: none;
        color: #4CAF50; /* Green text color for links */
        margin-right: 10px;
    }
    
    table a:hover {
        text-decoration: underline; /* Underline effect on hover */
    }
    </style>
<body>
     <!-- Navbar -->
     <div class="navbar">
        <a href="/">Home</a>
        <a href="/maps">Maps</a>
    </div>
    <h1>Dashboard</h1>

    <!-- Users Table -->
    <h2>Users</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Phone</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.email %></td>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td>
                        <a href="/admin/editUser/<%= user.id %>">Edit</a>
                        <a href="/admin/deleteUser/<%= user.id %>" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    
    <!-- Posts Table -->
<h2>Posts</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Status</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% posts.forEach(post => { %>
            <tr>
                <td><%= post.id %></td>
                <td><%= post.description %></td>
                <td><%= post.status %></td>
                <td><%= post.username %></td>
                <td>
                    <a href="/admin/editPost/<%= post.id %>">Edit</a>
                    <a href="/admin/deletePost/<%= post.id %>" onclick="return confirm('Are you sure you want to delete this post?')">Delete</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

</body>
</html>
